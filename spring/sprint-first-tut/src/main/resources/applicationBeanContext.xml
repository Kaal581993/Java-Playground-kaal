<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="myBean" class="sprint.first.tut.com.example.demo.GreetingService">

    </bean>
    <bean id="EmailNotificationService" class="sprint.first.tut.com.example.demo.loosecoupling.EmailNotificationService">
    </bean>
    <bean id="SMSNotificationService" class="sprint.first.tut.com.example.demo.loosecoupling.SMSNotificationService">
    </bean>
    <bean id="EmailNotification" class="sprint.first.tut.com.example.demo.loosecoupling.UserService">
        <property name="notificationService" ref="EmailNotificationService" />
    </bean>
    <bean id="SMSNotification" class="sprint.first.tut.com.example.demo.loosecoupling.UserService">
        <property name="notificationService" ref="SMSNotificationService" />
    </bean>
    <bean id="userService" class="sprint.first.tut.com.example.demo.loosecoupling.UserService">
        <property name="notificationService" ref="EmailNotificationService" />
    </bean>
</beans>
